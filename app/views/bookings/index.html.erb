<% provide(:title, "")%>
<%= provide(:h1, "Now Showing")%>
<%= provide(:span, "Book a movie now!") %>
<%= render "shared/landing"%>

<div class="relative overflow-x-auto mt-6">
  <table class="w-full text-sm text-left text-gray-500">
    <thead class="text-xs text-gray-800 uppercase bg-gray-300">
      <tr>
        <th class="px-6 py-6" scope="col">Movie Title</th>
        <th class="px-6 py-6" scope="col">Cinema Name(location)</th>
        <th class="px-6 py-6" scope="col">Available Seats</th>
        <th class="px-6 py-6" scope="col">Showing Date</th>
        <th class="px-6 py-6" scope="col">Showing Time</th>
        <th class="px-6 py-6" scope="col">Listed Last</th>
      </tr>
    </thead>
    <tbody>
      <% @showings.each do |show| %>
        <%= render "book", show: show %>
      <% end %>
    </tbody>
  </table>
</div>